<section class="card">
<%= form_with(model: tattoo, local: true) do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <div class="field">
    <%= form.label :price, "Amount I will pay to have this made" %>
    <%= form.number_field :price, step: 2 %>
  </div>

  <div class="field">
    <h2>Current Image </h2>
    <p><%= image_tag(@tattoo.images[0], height: 250) if @tattoo.images.attached? %></p>
    <h2>New Image</h2>
    <%= form.label :images %>
    <%= form.file_field :images %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
</section>
