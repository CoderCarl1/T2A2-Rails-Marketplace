<p id="notice"><%= notice %></p>

<h1>Tattoos</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<tbody>
   <% @tattoos.each do |tattoo| %>
     <tr>
       <td>
         <figure class="image is-square">
           <%= tattoo.image.attached? ? image_tag(tattoo.image) : '' %>
         </figure>
       </td>
       <td><%= tattoo.title %></td>
       <td><%= tattoo.content %></td>
       <td><%= tattoo.user.email %></td>
       <td><%= link_to 'Show', tattoo, class: 'button is-small is-outline is-primary is-rounded' %></td>
       <% if tattoo.can_edit?(current_user) %>
       <td><%= link_to 'Edit', edit_tattoo_path(tattoo), class: 'button is-small is-outline is-warning is-rounded' %></td>
       <td><%= link_to 'Destroy', tattoo, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button is-small is-outline is-danger is-rounded' %></td>
       <% end %>
     </tr>
   <% end %>
 </tbody>
</table>

<br>

<%= link_to 'New tattoo', new_tattoo_path %>
