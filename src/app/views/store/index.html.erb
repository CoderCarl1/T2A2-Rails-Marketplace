<p id="notice"><%= notice %></p>

<h1>Tattoos</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<tbody>
   <% @tattoos.each do |tattoo| %>
     <tr>
       <td>
         <figure>
           <%= tattoo.image.attached? ? image_tag(tattoo.image) : '' %>
         </figure>
       </td>
       <td><%= tattoo.title %></td>
       <td><%= tattoo.description %></td>
       <td><%= tattoo.user.username %></td>
       <td><%= link_to 'Show', tattoo%></td>
       <% if tattoo.can_edit?(current_user) %>
       <td><%= link_to 'Edit', edit_tattoo_path(tattoo)%></td>
       <td><%= link_to 'Destroy', tattoo, method: :delete, data: { confirm: 'Are you sure?' }%></td>
       <% end %>
     </tr>
   <% end %>
 </tbody>
</table>

<br>


